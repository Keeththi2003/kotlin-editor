<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <!-- Main Content -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top toolbar -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@color/toolbar_background"
            android:gravity="center_vertical">

            <!-- Hamburger menu icon -->
            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_24"
                android:background="@android:color/transparent"
                app:tint="@color/icon_tint"
                android:contentDescription="Menu" />

            <!-- File name -->
            <TextView
                android:id="@+id/fileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="untitled.txt"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Undo button -->
            <ImageButton
                android:id="@+id/undoButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_undo_24"
                app:tint="@color/icon_tint"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Undo" />

            <!-- Redo button -->
            <ImageButton
                android:id="@+id/redoButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_redo_24"
                app:tint="@color/icon_tint"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Redo" />

            <!-- Compile button -->
            <ImageButton
                android:id="@+id/compileButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_play_arrow_24"
                app:tint="@color/icon_tint"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Compile" />
        </LinearLayout>

        <!-- Editor area with line numbers -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <!-- Line numbers -->
                <TextView
                    android:id="@+id/lineNumbers"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:gravity="top|end"
                    android:paddingEnd="6dp"
                    android:textColor="@color/line_number"
                    android:background="@color/line_number_background"
                    android:textSize="15sp"
                    android:fontFamily="monospace" />

                <!-- Editor -->
                <EditText
                    android:id="@+id/editor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/lineNumbers"
                    android:hint="Start typing..."
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:textSize="15sp"
                    android:fontFamily="monospace"
                    android:background="@color/editor_background"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_hint"
                    android:paddingStart="8dp" />
            </RelativeLayout>
        </HorizontalScrollView>

        <!-- Bottom bar -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@color/bottom_bar_background">

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Words: 0 | Chars: 0"
                android:padding="8dp"
                android:textColor="@color/text_secondary"
                android:background="@color/status_background"
                android:fontFamily="monospace" />

            <ImageButton
                android:id="@+id/copyButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_content_copy_24"
                app:tint="@color/icon_tint"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Copy" />

            <ImageButton
                android:id="@+id/cutButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_content_cut_24"
                app:tint="@color/icon_tint"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Cut" />

            <ImageButton
                android:id="@+id/pasteButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_content_paste_24"
                app:tint="@color/icon_tint"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Paste" />
        </LinearLayout>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/sidebar_background"
        app:itemTextColor="@color/nav_item_color"
        app:itemIconTint="@color/nav_item_color"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
