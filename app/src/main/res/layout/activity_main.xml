<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top toolbar with hamburger menu, file name, undo/redo -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#2196F3"
        android:gravity="center_vertical">

        <!-- Hamburger menu -->
        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_more"
            android:background="@android:color/transparent"
            app:tint="#FFFFFF"
            android:contentDescription="Menu" />

        <!-- File name -->
        <TextView
            android:id="@+id/fileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="untitled.txt"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginStart="16dp" />

        <!-- Undo button -->
        <ImageButton
            android:id="@+id/undoButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_undo_24"
            app:tint="#FFFFFF"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Undo"/>

        <!-- Redo button -->
        <ImageButton
            android:id="@+id/redoButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_redo_24"
            app:tint="#FFFFFF"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Redo"/>
    </LinearLayout>

    <!-- Editor area with line numbers -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!-- Line numbers -->
            <TextView
                android:id="@+id/lineNumbers"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="top|end"
                android:paddingEnd="4dp"
                android:textColor="#888888"
                android:background="#EEEEEE"
                android:textSize="16sp"
                android:lineSpacingExtra="0dp"
                android:includeFontPadding="false"
                android:fontFamily="monospace"/>

            <!-- Editor -->
            <EditText
                android:id="@+id/editor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/lineNumbers"
                android:hint="Start typing..."
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:textSize="16sp"
                android:lineSpacingExtra="0dp"
                android:includeFontPadding="false"
                android:fontFamily="monospace"
                android:paddingStart="8dp"/>
        </RelativeLayout>
    </HorizontalScrollView>

    <!-- Unified Bottom Bar with Status and Buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="#CCCCCC">

        <TextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Words: 0 | Chars: 0"
            android:padding="8dp"
            android:background="#E0E0E0" />

        <ImageButton
            android:id="@+id/copyButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_content_copy_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Copy"/>

        <ImageButton
            android:id="@+id/cutButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_content_cut_24"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Cut"/>

        <ImageButton
            android:id="@+id/pasteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_content_paste_24"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Paste"/>
    </LinearLayout>
</LinearLayout>
